#:kivy 1.10.1

<MirrorClock>:
    BoxLayout:
        top: self.parent.top 
        x: self.parent.x
        orientation:"vertical"
        size: self.parent.width, self.parent.height
        padding: [0, 30, 0, 0]
        Label:
            text: root._hour
            size_hint: 1, None
            font_size: self.width * 0.2
            height: self.texture_size[1] + 10
            pos_hint: {"center_x": 0.5, "top": 1}
        Label:
            text: root._date
            size_hint: 1, None
            font_size: self.width * 0.04
            height: self.texture_size[1]
            halign: "right"
            pos_hint: {"center_x": 0.5, "top": 1}
        
        Widget: # Empty widget to take the remaining space and push labels at the top

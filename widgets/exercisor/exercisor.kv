#:kivy 2.0.0

<CustomButton@Button>:
    text_size: self.width, None
    halign: 'center'
    padding_x: '8dp'

<CustomToggle@ToggleButton>:
    text_size: self.width, None
    halign: 'center'
    valign: 'center'
    padding_x: '8dp'

<Exercisor>:
    renderer_layout: renderer_layout
    controls_layout: controls_layout
    ctrl_btn: ctrl_btn
    info_label: info_label
    frame_lab: frame_lab

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        CustomToggle:
            id: ctrl_btn
            size_hint: 0.08, 0.12
            color: 0, 0, 0, 1
            markup: True
            border: 0, 0, 0, 0
            text: '[b][i]Editor[/i][/b]' if self.state == 'normal' else '[b][i]Play[/i][/b]'
            pos_hint: {'right': 1} if self.state == 'normal' else {'left': 1}
            background_normal: './assets/right-arrow.png'
            background_down: './assets/left-arrow.png'
            on_state: root.change_control(self.state)
        FloatLayout:
            id: renderer_layout
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            padding: 20, 2
            Label:
                id: info_label
                color: 0.6, 0.6, 0.6, 1
                text: ''
                text_size: self.width, self.height
            Label:
                id: frame_lab
                color: 0.6, 0.6, 0.6, 1
                text: ''
                text_size: self.width, self.height
                halign: 'right'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            id: controls_layout
            size_hint: 1, 0.10
            
            
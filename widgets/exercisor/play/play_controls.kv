#:kivy 2.0.0

<PlayControls>:
    orientation: 'horizontal'
    name: 'play_controls'
    ExerciseSpinner:
        id: choose_exercise_spin
        values: root.exercises.keys()
        on_text: root.start_playing(self.text)
    PlayPauseButton:
        id: play_pause_btn
        on_state: root.on_play_pause(self.state)
    MeshOptions:
        set_smpl_mode: root.set_smpl_mode
    Spinner:
        id: demo_render_spin
        text: 'Render'
        values: 'monkey', 'monkey_no_norms', 'random', 'smpl'
        size_hint_x: 0.3
        on_text: root.demo_render(self.text)
    Widget:
        size_hint_x: 0.8

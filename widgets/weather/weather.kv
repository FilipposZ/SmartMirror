#:kivy 2.0.0

<Weather>:
    BoxLayout:
        orientation: "vertical"
        size: self.parent.width, self.parent.height
        padding: [0, 50, 0, 0]
        top: self.parent.top
        x: self.parent.x
        GridLayout:
            cols: 2
            Label:
                id: temp_label
                text: root._temperature + "Â°C"
                font_size: self.width * 0.2
                
            AsyncImage:
                id: temp_icon
                source: root._icon
                size_hint: 0.7, 0.25
                allow_stretch: True
        Widget:
        Label:
            id: temp_desc
            text: root._description
            size_hint: 1, None
            font_size: self.width * 0.05
            height: self.texture_size[1]
            halign: "center"
            pos_hint: {"center_x": 0.5, "top": 1}
            
